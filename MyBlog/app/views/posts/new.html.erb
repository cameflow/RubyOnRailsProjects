<div class="new-form">

  <h1>Create new post</h1>

    <%= form_for(@post, html:{ multipart: true }) do |f| %>
      <%= f.label :title %>
      <br>
      <div class="textfield">
        <%= f.text_field :title %>
      </div>
      <br>
      <%= f.label :text %>
      <br>
      <%= f.text_area :text, cols: 100, rows: 10  %>

      <br>
      <br>
      <span class="picture">
        <%= f.file_field :picture, accpet: 'image/jpeg,image/gif,image/png' %>
      </span>
      <%= f.submit 'Post', class: "btn btn-success btn-lg" %>
    <% end %>
</div>

<script type="text/javascript">
  $('#post_picture').bind('change', function(){
    size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5)
    {
      alert('maximum file size is 5MB, please choose a smaller file');
    }
  });
</script>
