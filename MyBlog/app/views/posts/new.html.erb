<%= stylesheet_link_tag "custom" %>
<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for @post do |f| %>
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
      <br>
      <%= f.label :text %>
      <br>
      <%= f.text_area :text, rows: 10 %>

      <br>
      <%= f.submit 'Post', class: "btn btn-success" %>
    <% end %>
  </div>
</div>
