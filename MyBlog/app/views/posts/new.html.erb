<div class="new-form">

  <h1>Create new post</h1>

    <%= form_for @post do |f| %>
      <%= f.label :title %>
      <br>
      <div class="textfield">
        <%= f.text_field :title %>
      </div>
      <br>
      <%= f.label :text %>
      <br>
      <%= f.text_area :text, cols: 100, rows: 10  %>

      <br>
      <br>
      <%= f.submit 'Post', class: "btn btn-success btn-lg" %>
    <% end %>
</div>
